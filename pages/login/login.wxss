.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.logo {
  width: 100px;
  height: 100px;
  margin-bottom: 30px;
  position: relative;
  top: -180px;
}
.input-group {
  width: 80%;
  margin-bottom: 20px;
}
.username-input,
.password-input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  position: relative; top: -200px
}
.login-button {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  position: relative; top: -200px
}
.forgot-password {
  margin-top: 10px;
  color: #999;
}
.register-link {
  margin-top: 10px;
  color: #007bff;
}